@model IEnumerable<BookStore.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Books</h1>

<p>
    <a asp-action="Create" class="btn btn-success ">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>Image</th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Author Name
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(@item.BookImagePath))
                    {
                        <img src="@item.BookImagePath" alt="@item.Title" width="50" class="rounded-circle" />
                    }
                    else
                    {
                        <i class="fas fa-book" aria-hidden="true"></i> <!-- Font Awesome book icon as placeholder -->
                    }
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.FullName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {  id=item.Id  },new {@class = "btn btn-warning btn-sm"}) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id  },new {@class = "btn btn-info btn-sm"}) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id  },new {@class = "btn btn-danger btn-sm"})
                </td>
            </tr>
        }
    </tbody>
</table>
